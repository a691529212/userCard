/* pages/login/login.wxss */
.container{
  padding: 1rem;
  font-size: 0.9rem;
  line-height: 1.5rem;
  border-shadow:1px 1px #0099CC;
}

.row{
  display: flex;
  align-items: center;
  margin-bottom: 0.8rem;
}

.row text{
  flex-grow:  1;
  text-align: right;
  color: black;
}

.row input{
  font-size: 0.7rem;
  color: #000000;
  flex-grow: 3;
  border:  1px solid #0099CC;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow:  0 0 0.16rem #000000;
  padding: 0.3rem;
  margin: 0.4rem;
}
.row button{
  padding: 0.5rem;
  align-items: center;
}