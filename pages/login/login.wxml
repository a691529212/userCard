<!--pages/login/login.wxml-->
<view class= "container">
  <form bindsubmit="formSubmit">
    <view class="row">
    <text> 姓名 :</text>
    <input type="text" name = "userName" placeholder="请输入用户名" value='{{userName}}'></input>
    </view>
    <view class='row'>
      <text>密码 :</text>
      <input type='password' name = "userPassword" placeholder='请输入密码' value='{{userPassword}}'></input>
    </view>
    <view class='row'>
    <button type='primary' form-type='submit'> 登录</button>
    </view>
  </form>
</view>